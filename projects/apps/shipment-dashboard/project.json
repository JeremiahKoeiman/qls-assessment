{
  "name": "shipment-dashboard",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "prefix": "sh",
  "sourceRoot": "projects/apps/shipment-dashboard",
  "tags": ["scope:shipment-dashboard-app"],
  "targets": {
    "build": {
      "executor": "ngx-build-plus:browser",
      "options": {
        "outputPath": "{workspaceRoot}/dist/{projectRoot}",
        "index": "{projectRoot}/src/index.html",
        "main": "{projectRoot}/src/main.ts",
        "polyfills": ["zone.js"],
        "tsConfig": "{projectRoot}/tsconfig.app.json",
        "styles": ["{projectRoot}/src/styles.scss"],
        "scripts": [],
        "assets": [
          {
            "glob": "**/favicon.ico",
            "input": "{projectRoot}/src",
            "output": ""
          },
          {
            "glob": "**/*",
            "input": "{projectRoot}/src/assets",
            "output": "assets"
          },
          {
            "glob": "**/config.json",
            "input": "{projectRoot}/src/config",
            "output": "assets"
          }
        ],
        "inlineStyleLanguage": "scss",
        "stylePreprocessorOptions": {
          "includePaths": ["{projectRoot}/src/styles"]
        }
      },
      "configurations": {
        "production": {
          "fileReplacements": [
            {
              "replace": "{projectRoot}/src/environments/environment.dev.ts",
              "with": "{projectRoot}/src/environments/environment.prod.ts"
            }
          ],
          "budgets": [
            {
              "type": "initial",
              "maximumWarning": "5mb",
              "maximumError": "10mb"
            },
            {
              "type": "anyComponentStyle",
              "maximumWarning": "6kb",
              "maximumError": "10kb"
            }
          ],
          "outputHashing": "all",
          "namedChunks": true,
          "sourceMap": false,
          "extractLicenses": true,
          "vendorChunk": false,
          "buildOptimizer": true,
          "optimization": {
            "scripts": true,
            "styles": {
              "minify": true,
              "inlineCritical": false
            },
            "fonts": true
          }
        },
        "development": {
          "buildOptimizer": false,
          "optimization": false,
          "vendorChunk": true,
          "extractLicenses": false,
          "sourceMap": true,
          "namedChunks": true
        }
      },
      "defaultConfiguration": "development"
    },
    "serve": {
      "executor": "ngx-build-plus:dev-server",
      "options": {
        "port": 4200,
        "publicHost": "http://localhost:4200"
      },
      "configurations": {
        "production": {
          "buildTarget": "shipment-dashboard:build:production"
        },
        "development": {
          "buildTarget": "shipment-dashboard:build:development"
        }
      },
      "defaultConfiguration": "development"
    },
    "extract-i18n": {
      "executor": "@angular-devkit/build-angular:extract-i18n",
      "options": {
        "buildTarget": "shipment-dashboard:build:production"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "projects/apps/shipment-dashboard/jest.config.ts"
      }
    },
    "serve-static": {
      "executor": "@nx/web:file-server",
      "options": {
        "buildTarget": "shipment-dashboard:build:production",
        "port": 4200,
        "spa": true
      }
    }
  }
}
